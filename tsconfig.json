{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsconfig.tsbuildinfo",
    "outDir": "./lib",
    "rootDir": "./src/",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["dom", "es2016"],
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*/scratch.ts"]
}
