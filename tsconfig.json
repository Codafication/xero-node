{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,       
        "strictPropertyInitialization": false,
        "target": "es2018",
        "removeComments": true,
        "sourceMap": true,
        "noLib": false,
        "declaration": true,
        "outDir": "dist",
        "lib": [
            "dom",
            "es6",
            "es5",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules/",
        "**/__tests__/**/*",
        "**/__integration_tests__/**/*"
    ]
}